<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/comresBothMatchParentStyle"
        android:background="@color/comresLayoutBgColorLightGray"
        android:orientation="vertical"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/comresSideMarginDefault"
            android:layout_marginRight="@dimen/comresSideMarginDefault"
            android:gravity="center"
            android:orientation="vertical"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/comresSideMarginDefault"
                android:layout_marginRight="@dimen/comresSideMarginDefault"
                android:gravity="center"
                android:orientation="horizontal"
                >

            <Button
                    android:id="@+id/btnMove"
                    style="@style/comresCommonBtnDefaultStyle"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Move"
                    />

            <Button
                    android:id="@+id/btnScale"
                    style="@style/comresCommonBtnDefaultStyle"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:text="Scale"
                    />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/comresSideMarginDefault"
                android:layout_marginRight="@dimen/comresSideMarginDefault"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                >

            <Button
                    android:id="@+id/btnShow"
                    style="@style/comresCommonBtnDefaultStyle"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Show"
                    />

            <Button
                    android:id="@+id/btnHide"
                    style="@style/comresCommonBtnDefaultStyle"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:text="Hide"
                    />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            >

        <Button
                android:id="@+id/btnAnimator"
                style="@style/comresCommonBtnDefaultStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                />
    </LinearLayout>
</LinearLayout>
